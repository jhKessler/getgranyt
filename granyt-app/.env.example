# =====================================================
# Granyt App - Local Development Environment
# =====================================================
# Copy this file to .env for local development
#
# cp .env.example .env
#
# Environment variables are validated by T3 Env (src/env.ts)
# See the schema for descriptions and validation rules.
# =====================================================

# =========================
# Database (Required)
# =========================
# PostgreSQL connection string
# For local development with docker-compose.yml
DATABASE_URL="postgresql://granyt:granyt@localhost:5432/granyt?schema=public"

# =========================
# Authentication (Required)
# =========================
# Secret key for Better Auth (min 16 chars)
# Generate for production: openssl rand -hex 32
# This example key is fine for LOCAL DEVELOPMENT ONLY
BETTER_AUTH_SECRET="local-development-secret-change-in-production"

# Auth trusted origin URL (defaults to http://localhost:3000)
BETTER_AUTH_URL="http://localhost:3000"

# =========================
# Application (Optional)
# =========================
# Public app URL for dashboard links (used in notifications)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# App mode: APP (default), DOCS, or DEV
# NEXT_PUBLIC_GRANYT_MODE="DEV"

# Pino log level: trace, debug, info, warn, error, fatal
# LOG_LEVEL="debug"

# =========================
# Seed Data (Optional)
# =========================
# Set a specific password for the admin user during db:seed
# If not set, a random password will be generated
# SEED_ADMIN_PASSWORD="YourPassword123!"

# =========================
# SMTP Email (Optional)
# =========================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=alerts@example.com
# SMTP_FROM_NAME=Granyt Alerts
# SMTP_SECURE=true

# =========================
# Resend Email (Optional)
# =========================
# GRANYT_RESEND_API_KEY=re_...
# RESEND_FROM_EMAIL=alerts@example.com
# RESEND_FROM_NAME=Granyt Alerts

# =========================
# Webhook (Optional)
# =========================
# GRANYT_WEBHOOK_URL=https://example.com/webhook
# GRANYT_WEBHOOK_SECRET=your-secret-key

# =========================
# Build Configuration
# =========================
# Skip env validation during Docker builds
# SKIP_ENV_VALIDATION=1
